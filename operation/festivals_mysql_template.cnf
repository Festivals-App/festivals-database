#
# The custom MySQL database server configuration file for the FestivalsApp Database Server.
#

[mysqld]

#
# * Basic Settings
#
bind-address		= 127.0.0.1
# port		= 3306

#
# * SSL Settings
#
ssl-ca = /var/lib/mysql/ca.pem
ssl-cert = /var/lib/mysql/server-cert.pem
ssl-key = /var/lib/mysql/server-key.pem
require_secure_transport = ON

#
# * Fine Tuning
#
key_buffer_size		    = 16M
# max_allowed_packet	= 64M
# thread_stack		    = 256K
# thread_cache_size     = -1
# max_connections       = 151